
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<table id="sign_up_container">
  <tr><td><h2>Sign up</h2></td></tr>
  <tr><td colspan="2"> <%= devise_error_messages! %></td></tr>
  <tr>
    <td><%= f.label :email %></td>
    <td><%= f.email_field :email %></td>
  </tr>
  <tr>
    <td><%= f.label :password %></td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td><%= f.label :password_confirmation %></td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
  <tr>
    <td><%= submit_tag "Sign up", :class => "small orange button" %></td>
    <tr><td colspan="2"><%= render :partial => "devise/shared/links" %></td></tr>
  </tr>
</table>
<% end %>

