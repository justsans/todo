<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div>



<table id="new_form_container">
  <tr>
    <td colspan="2"><h1>Create a New task</h1></td>
  </tr>
  <tr>
    <td style="width:150px;"><%= f.label :description %></td>
    <td><%= f.text_field :description %></td>
  </tr>
  <tr>
    <td><%= f.label :priority %></td>
    <td><%= select("task", "priority", [['High', 1], ['Medium', 2], ['Low',3]]) %></td>
  </tr>
  <tr>
    <td>Due Date</td>
    <td><%= date_select :task, :due_date %></td>
  </tr>
  <tr>
    <td><%= submit_tag "Create New Task", :class => "small orange button"%></td>
    <td><%= link_to 'Back', tasks_path %></td>
  </tr>
</table>
</div>
<% end %>
